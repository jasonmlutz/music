<!DOCTYPE html>
<html>
  <head>
    <title>Music</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <% if current_user.nil? %>
      <% unless current_page?('/') || current_page?('/session/new') || current_page?('/users/new')%>
        <%= button_to 'Sign in', new_session_url, method: :get %>
        <%= button_to 'Register', new_user_url, method: :get %>
      <% end %>
    <% else %>
      Current user: <%= current_user.email %>
      <%= button_to 'Logout', session_url, method: :delete %>
    <% end %>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
