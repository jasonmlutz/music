<% action_url = (note.persisted? ? note_url(note) : notes_url) %>
<% method = (note.persisted? ? :patch : :post) %>

<form action="<%= action_url %>" method="post" >
  <input type="hidden" name="_method" value="<%= method %>">
  <input
    type="hidden"
    name="authenticity_token"
    value="form_authenticity_token">
  <input type="hidden" name="note[track_id]" value="<%= track.id %>">

  <label for="body">Message</label>
  <textarea name="note[body]" id="body" value="<%= note.body %>"></textarea>


  <% submit_text = (note.persisted? ? 'Update' : 'Create') %>
  <input type="submit" value="<%= submit_text %>">

</form>
